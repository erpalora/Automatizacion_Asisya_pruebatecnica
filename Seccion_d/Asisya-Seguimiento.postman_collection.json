{
    "info": {
        "name": "Asisya - Seguimiento SLA Demo",
        "_postman_id": "asisya-collection-demo",
        "description": "Colecci\u00f3n de pruebas para el endpoint /api/asisya/seguimiento con validaciones SLA.",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Validar SLA Seguimiento",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "url": {
                    "raw": "{{base_url}}/post",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "post"
                    ]
                },
                "body": {
                    "mode": "raw",
                    "raw": "{\"idSolicitud\": \"{{idSolicitud}}\"}"
                }
            },
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "exec": [
                            "pm.test('C\u00f3digo de estado es 200', function () {",
                            "    pm.response.to.have.status(200);",
                            "});",
                            "",
                            "pm.test('Tiempo de respuesta menor a 1.5s', function () {",
                            "    pm.expect(pm.response.responseTime).to.be.below(1500);",
                            "});",
                            "",
                            "pm.test('Contiene el campo idSolicitud', function () {",
                            "    var jsonData = pm.response.json();",
                            "    pm.expect(jsonData).to.have.property('json');",
                            "    pm.expect(jsonData.json).to.have.property('idSolicitud');",
                            "});"
                        ],
                        "type": "text/javascript"
                    }
                }
            ]
        }
    ]
}